import time
start = time.time()
def search(inp, page):
    words = page.split(" ") 
    inputwords = inp.split(" ") 
    score = 0
    for i in words:
        for k in inputwords:
            if i.lower()==k.lower():
                score+=1
    return score      
sentences = ["Cricket is a type of sport", "Python is a good language", "Ram is a good boy", "His name is Steve and he is a boy"]
query = input("Search...")
score = [search(query, i)for i in sentences]

sort = [x for x in sorted(zip(score, sentences),reverse=True) if x[0]!=0]
print(f"{len(sort)} results found! in {time.time()-start}")
for j,k in sort:
    print(k) 
            

    
        
    
    
    
